# Printernizer Environment Configuration
# Copy to .env and customize for your deployment

# Application Environment
ENVIRONMENT=production
DEBUG=false
# IMPORTANT: Generate a secure secret key (32+ characters)
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=REPLACE_WITH_SECURE_GENERATED_KEY
API_VERSION=v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=info

# German Business Configuration (optional)
TIMEZONE=Europe/Berlin
CURRENCY=EUR
VAT_RATE=0.19
BUSINESS_NAME=Your Business Name
BUSINESS_LOCATION=Your Location

# Database Configuration
DATABASE_PATH=/app/data/printernizer.db
DATABASE_BACKUP_INTERVAL=24
DATABASE_RETENTION_DAYS=90

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1
SECURE_SSL_REDIRECT=false
SESSION_COOKIE_SECURE=false
CSRF_COOKIE_SECURE=false

# File Upload Configuration
MAX_FILE_SIZE_MB=100
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=.3mf,.stl,.obj,.gcode

# Printer Integration Configuration
# Bambu Lab Settings
BAMBU_DEFAULT_TIMEOUT=30
BAMBU_RETRY_ATTEMPTS=3
BAMBU_MQTT_KEEPALIVE=60

# Prusa Settings
PRUSA_DEFAULT_TIMEOUT=30
PRUSA_RETRY_ATTEMPTS=3
PRUSA_POLL_INTERVAL=30

# Printer Discovery Configuration
DISCOVERY_ENABLED=true
DISCOVERY_TIMEOUT_SECONDS=10
DISCOVERY_SCAN_INTERVAL_MINUTES=60
# Run automatic printer discovery on startup (opt-in, may add 10-20s to startup time)
DISCOVERY_RUN_ON_STARTUP=false

# Home Assistant Integration (optional)
MQTT_HOST=
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_DISCOVERY_PREFIX=homeassistant

# Monitoring Configuration (optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=8001
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Email Configuration (optional, for alerts)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
EMAIL_FROM=

# GDPR Compliance (optional)
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years for business records
PRIVACY_POLICY_URL=
COOKIE_CONSENT_REQUIRED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/app/logs/printernizer.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Feature Flags
ENABLE_3D_PREVIEW=true
ENABLE_ANALYTICS_EXPORT=true
ENABLE_BUSINESS_REPORTS=true
ENABLE_FILE_SYNC=true

# G-code Preview Optimization
GCODE_OPTIMIZE_PRINT_ONLY=true
GCODE_OPTIMIZATION_MAX_LINES=1000
GCODE_RENDER_MAX_LINES=10000

# Development Settings (only used in development)
DEV_RELOAD=false
DEV_DEBUG_TOOLBAR=false
DEV_PROFILER=false