# Printernizer Environment Configuration
# Copy to .env and customize for your deployment

# Application Environment
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production
API_VERSION=v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=info

# German Business Configuration
TIMEZONE=Europe/Berlin
CURRENCY=EUR
VAT_RATE=0.19
BUSINESS_NAME=Porcus3D
BUSINESS_LOCATION=Kornwestheim, Germany

# Database Configuration
DATABASE_PATH=/app/data/printernizer.db
DATABASE_BACKUP_INTERVAL=24
DATABASE_RETENTION_DAYS=90

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://printernizer-redis:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# CORS Configuration
CORS_ORIGINS=https://porcus3d.de,https://www.porcus3d.de,https://printernizer.porcus3d.de
CORS_ALLOW_CREDENTIALS=true

# Security Configuration
ALLOWED_HOSTS=porcus3d.de,www.porcus3d.de,printernizer.porcus3d.de
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# File Upload Configuration
MAX_FILE_SIZE_MB=100
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=.3mf,.stl,.obj,.gcode

# Printer Integration Configuration
# Bambu Lab Settings
BAMBU_DEFAULT_TIMEOUT=30
BAMBU_RETRY_ATTEMPTS=3
BAMBU_MQTT_KEEPALIVE=60

# Prusa Settings  
PRUSA_DEFAULT_TIMEOUT=30
PRUSA_RETRY_ATTEMPTS=3
PRUSA_POLL_INTERVAL=30

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Email Configuration (for alerts)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
EMAIL_FROM=noreply@porcus3d.de

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-central-1

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years for business records
PRIVACY_POLICY_URL=https://porcus3d.de/datenschutz
COOKIE_CONSENT_REQUIRED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/app/logs/printernizer.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Performance Configuration
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
HTTP_TIMEOUT=30
WORKER_TIMEOUT=120

# Feature Flags
ENABLE_3D_PREVIEW=true
ENABLE_ANALYTICS_EXPORT=true
ENABLE_BUSINESS_REPORTS=true
ENABLE_FILE_SYNC=true

# Development Settings (only used in development)
DEV_RELOAD=false
DEV_DEBUG_TOOLBAR=false
DEV_PROFILER=false